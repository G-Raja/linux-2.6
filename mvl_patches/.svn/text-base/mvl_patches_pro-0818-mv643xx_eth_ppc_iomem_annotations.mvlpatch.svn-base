#! /usr/bin/env bash
# Patch: -mv643xx_eth_ppc_iomem_annotations
# Date: Tue Aug  8 20:54:11 2006

PATCHNUM=818
LSPINFO=include/linux/lsppatchlevel.h
TMPFILE=/tmp/mvl_patch_$$

function dopatch() {
    patch $* >${TMPFILE} 2>&1 <<"EOF"
diff-tree dc074a8a32bc12e19436b087f01f4a4700e9b9c0 (from 91de1fff2d431fec1162333a1e4fad9a53cd5b9e)
tree 38739592d76c9a7f12029c0ad4f0a36c11dc7367
